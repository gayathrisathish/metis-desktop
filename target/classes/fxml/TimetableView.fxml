<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.metis.controllers.TimetableController"
            stylesheets="@../css/application.css"
            prefWidth="900" prefHeight="600">

    <!-- ===== Top Bar ===== -->
    <top>
        <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #2a9d8f;">
            <padding>
                <Insets top="10" right="15" bottom="10" left="15"/>
            </padding>
            <Label text="ðŸ“… Timetable" style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: white;"/>
        </HBox>
    </top>

    <!-- ===== Main Content ===== -->
    <center>
        <VBox spacing="20" alignment="TOP_CENTER" style="-fx-background-color: #1e1e1e;">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <!-- Add Class Form -->
            <GridPane hgap="15" vgap="15" alignment="CENTER">
                <Label text="Subject:" style="-fx-text-fill: white;" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="subjectField" promptText="Enter subject" 
                           style="-fx-text-fill: black; -fx-prompt-text-fill: gray;"
                           GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Time:" style="-fx-text-fill: white;" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="timeField" promptText="e.g., 10:00 AM - 11:00 AM" 
                           style="-fx-text-fill: black; -fx-prompt-text-fill: gray;"
                           GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Location:" style="-fx-text-fill: white;" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="locationField" promptText="e.g., Room 204" 
                           style="-fx-text-fill: black; -fx-prompt-text-fill: gray;"
                           GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Day:" style="-fx-text-fill: white;" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <ComboBox fx:id="dayBox" promptText="Select day" 
                          GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Button text="âž• Add Class" onAction="#addClass" 
                        GridPane.rowIndex="4" GridPane.columnIndex="1" style="-fx-background-color: #2a9d8f; -fx-text-fill: white;"/>
            </GridPane>

            <!-- Timetable Table -->
            <TableView fx:id="timetableTable" prefWidth="700" prefHeight="350">
                <columns>
                    <TableColumn fx:id="dayCol" text="Day" prefWidth="100"/>
                    <TableColumn fx:id="subjectCol" text="Subject" prefWidth="200"/>
                    <TableColumn fx:id="timeCol" text="Time" prefWidth="200"/>
                    <TableColumn fx:id="locationCol" text="Location" prefWidth="200"/>
                </columns>
            </TableView>

            <Button text="ðŸ—‘ Delete Selected" onAction="#deleteSelected" style="-fx-background-color: #e76f51; -fx-text-fill: white;"/>
        </VBox>
    </center>

</BorderPane>
