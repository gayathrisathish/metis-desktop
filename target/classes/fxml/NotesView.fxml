<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.metis.controllers.NotesController"
            prefWidth="900" prefHeight="700"
            style="-fx-background-color: #0f1422;">

    <Label text="ðŸ—’ Notes"
           layoutX="30" layoutY="30"
           style="-fx-font-size: 22px; -fx-text-fill: white;"/>

    <TextField fx:id="noteTitleField"
               layoutX="30" layoutY="80"
               prefWidth="400"
               promptText="Enter note title"
               style="-fx-background-color:#1e2230; -fx-text-fill:white; -fx-prompt-text-fill:gray;"/>

    <Button text="Save Note"
            layoutX="450" layoutY="80"
            onAction="#saveNote"
            style="-fx-background-color:#3D6BF5; -fx-text-fill:white; -fx-background-radius:6;"/>

    <TextArea fx:id="noteContentArea"
              layoutX="30" layoutY="130"
              prefWidth="500" prefHeight="400"
              wrapText="true"
              promptText="Write your note here..."
              style="-fx-control-inner-background:#1e2230; -fx-text-fill:white; -fx-prompt-text-fill:gray;"/>

    <Label text="Saved Notes"
           layoutX="570" layoutY="30"
           style="-fx-text-fill:white; -fx-font-size:16px;"/>

    <ListView fx:id="notesList"
              layoutX="570" layoutY="60"
              prefWidth="280" prefHeight="470"
              onMouseClicked="#loadSelectedNote"
              style="-fx-background-color:#1e2230; -fx-text-fill:white;"/>
</AnchorPane>
